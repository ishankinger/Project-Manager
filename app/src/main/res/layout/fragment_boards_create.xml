<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".boards.BoardsCreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/backButtonCreateBoard"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="@string/back_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_board"
                android:textColor="@color/black"
                android:textSize="24sp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/createBoardImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/intro_image"
                    android:background="@drawable/outline_circle"
                    android:src="@drawable/ic_user_place_holder" />

                <EditText
                    android:id="@+id/createBoardName"
                    android:layout_width="260dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="32dp"
                    android:layout_gravity="center"
                    android:hint="@string/board_name"
                    android:gravity="center"
                    android:background="@drawable/outline_box"
                    android:autofillHints="name"
                    android:inputType="textVisiblePassword"
                    android:textSize="16sp"
                    android:shadowColor="@color/dark_orchid"
                    android:textColor="@color/black"/>


                <Button
                    android:id="@+id/createBoardButton"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_color"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/create_board"
                    android:gravity="center"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</layout>